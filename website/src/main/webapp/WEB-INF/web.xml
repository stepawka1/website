<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
 <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>login.Login</servlet-class>
 </servlet>

 <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login/*</url-pattern>
    <url-pattern>/singup/*</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>Catalog</servlet-name>
    <servlet-class>Catalog.Catalog</servlet-class>
 </servlet>

 <servlet-mapping>
    <servlet-name>Catalog</servlet-name>
    <url-pattern>/catalog/*</url-pattern>
    <url-pattern>/catalog/change</url-pattern>
    <url-pattern>/purchase</url-pattern>
    <url-pattern>/catalog/logout</url-pattern>
    <url-pattern>/product/*</url-pattern>
    <url-pattern>/addproduct/*</url-pattern>
    <url-pattern>/getQuintity</url-pattern>
    <url-pattern>/buyProducts</url-pattern>
    <url-pattern>/search</url-pattern>
   

</servlet-mapping>


</web-app> 